<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:text="Click on child&apos;s name to open his profile." />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_alignRight="@+id/imageView1"
                android:layout_below="@+id/imageView1"
                android:layout_toRightOf="@+id/textView1"
                android:layout_marginLeft="10dp"
                android:text="On child&apos;s profile,you can see his last location known on a map or &apos;Location is unknown&apos; message if his location can not be found because of network error or location service disabled.Click on add new route for adding new route for the child." />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="100dp"
                android:src="@drawable/select_child2" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="170dp"
                android:layout_height="160dp"
                android:layout_alignRight="@+id/imageView4"
                android:layout_below="@+id/imageView1"
                android:src="@drawable/loc" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imageView2"
                android:layout_marginTop="20dp"
                android:src="@drawable/src" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/imageView3"
                android:layout_marginTop="30dp"
                android:text="To add new route,click on map to put start location marker.click again on map to put end location marker,wait seconds and then new route is drawn on map." />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_below="@+id/imageView3"
                android:src="@drawable/dst" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_below="@+id/imageView3"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/imageView4"
                android:text="Your child should follow this route in his way.The default green zone is 800 meters." />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_below="@+id/imageView4"
                android:layout_marginTop="30dp"
                android:text="After adding new route,you can send it to your child by pressing on &apos;send&apos; button." />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/textView5"
                android:src="@drawable/send" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_below="@+id/imageView5"
                android:src="@drawable/on" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_below="@+id/imageView5"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@+id/imageView6"
                android:text="You can control receiving notification from this child or not by turning on or off notifications from his profile.You can press on 'call' button to call him. " />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="260dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:text="Adding a contact is easily,press on &apos;add contact&apos; button and import from your contact lists or add new.
              Note:For security issue,you can add a child only if he accepts your request." />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>