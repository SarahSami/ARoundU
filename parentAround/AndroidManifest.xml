<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.ejust"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="app.ejust.permission.C2D_MESSAGE" />

    <permission
        android:name="app.ejust.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <permission
        android:name="app.ejust.SEND_NOTIFICATIONS"
        android:description="@string/sendPermissionSummary"
        android:label="@string/sendPermissionLabel"
        android:permissionGroup="android.permission-group.PERSONAL_INFO"
        android:protectionLevel="normal" />
    <permission
        android:name="app.ejust.RECEIVE_NOTIFICATIONS"
        android:description="@string/receivePermissionSummary"
        android:label="@string/receivePermissionLabel"
        android:permissionGroup="android.permission-group.PERSONAL_INFO"
        android:protectionLevel="normal" />

    <uses-permission android:name="app.ejust.SEND_NOTIFICATIONS" />
    <uses-permission android:name="app.ejust.RECEIVE_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/pch"
        android:label="@string/app_name" >
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name="app.ejust.ui.AccountMenu"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="app.ejust.ui.MapActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="app.ejust.ui.GreenZone"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="app.ejust.ui.LocationView"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="app.ejust.ui.AddActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="app.ejust.ui.ChildInfoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="app.ejust" />
            </intent-filter>
        </receiver>

        <service android:name="app.ejust.GCMIntentService" />
    </application>

</manifest>